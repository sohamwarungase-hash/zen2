generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  CITIZEN
  ADMIN
  DEPT_OFFICER
}

enum Category {
  ROAD
  WATER
  GARBAGE
  STREETLIGHT
  SANITATION
  OTHER
}

enum Status {
  SUBMITTED
  ASSIGNED
  IN_PROGRESS
  RESOLVED
  ESCALATED
}

enum Department {
  ROADS_AND_INFRASTRUCTURE
  WATER_SUPPLY
  SOLID_WASTE_MANAGEMENT
  STREET_LIGHTING
  SANITATION
}

enum Source {
  MOBILE
  WEB
}

model User {
  id           String       @id @default(uuid())
  name         String
  email        String       @unique
  phone        String?
  role         Role         @default(CITIZEN)
  department   Department?
  points       Int          @default(0)
  createdAt    DateTime     @default(now())
  complaints   Complaint[]
  validations  Validation[]
}

model Complaint {
  id              String          @id @default(uuid())
  title           String
  description     String
  photoUrl        String?
  latitude        Float
  longitude       Float
  address         String?
  category        Category
  priority        Int             @default(5)
  geoRiskBonus    Int             @default(0)
  finalPriority   Int             @default(5)
  status          Status          @default(SUBMITTED)
  department      Department
  slaDeadline     DateTime
  slaBreach       Boolean         @default(false)
  aiReasoning     String?
  validationCount Int             @default(0)
  source          Source          @default(MOBILE)
  citizenId       String
  citizen         User            @relation(fields: [citizenId], references: [id])
  validations     Validation[]
  statusHistory   StatusHistory[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model Validation {
  id           String     @id @default(uuid())
  complaintId  String
  complaint    Complaint  @relation(fields: [complaintId], references: [id])
  citizenId    String
  citizen      User       @relation(fields: [citizenId], references: [id])
  createdAt    DateTime   @default(now())

  @@unique([complaintId, citizenId])
}

model StatusHistory {
  id           String     @id @default(uuid())
  complaintId  String
  complaint    Complaint  @relation(fields: [complaintId], references: [id])
  status       Status
  changedBy    String
  note         String?
  createdAt    DateTime   @default(now())
}
